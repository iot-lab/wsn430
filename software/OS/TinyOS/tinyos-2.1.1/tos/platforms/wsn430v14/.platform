# WSN430v14 - platform includes
#
# Includes that should take precedence come first.  Platforms come before
# chips because they may override files.  These must be specified as
# @includes instead of -I's to @opts, otherwise the %T won't be processed
# by ncc.

push( @includes, qw(

  ## wsn430v14 Platform
  %T/platforms/wsn430v14
  %T/platforms/wsn430v14/chips/cc2420
  %T/platforms/wsn430v14/chips/msp430
  
  ## MSP430 Chip
  %T/chips/msp430
  %T/chips/msp430/adc12
  %T/chips/msp430/dma
  %T/chips/msp430/pins
  %T/chips/msp430/timer
  %T/chips/msp430/usart
  %T/chips/msp430/sensors
  
  ## Generic import
  %T/lib/timer
  %T/lib/serial
  %T/lib/adc
  %T/lib/power
  
  ## Radio chip
  %T/chips/ds2401
  %T/chips/cc2420
  %T/chips/cc2420/alarm
  %T/chips/cc2420/control
  %T/chips/cc2420/csma
  %T/chips/cc2420/interfaces
  %T/chips/cc2420/link
  %T/chips/cc2420/lowpan
  %T/chips/cc2420/lpl
  %T/chips/cc2420/packet
  %T/chips/cc2420/receive
  %T/chips/cc2420/spi
  %T/chips/cc2420/security
  %T/chips/cc2420/transmit
  %T/chips/cc2420/unique
  
  ) );

@opts = qw(

  -gcc=msp430-gcc
  -mmcu=msp430x1611
  -fnesc-target=msp430
  -fnesc-no-debug

);

push @opts, "-fnesc-scheduler=TinySchedulerC,TinySchedulerC.TaskBasic,TaskBasic,TaskBasic,runTask,postTask" if !$with_scheduler_flag;
push @opts, "-mingw-gcc" if $cygwin;

$ENV{'CIL_MACHINE'} =
    "version_major=3 " .
    "version_minor=2 " .
    "version=msp430-3.2.3 " .
    "short=2,2 " .
    "int=2,2 " .
    "long=4,2 " .
    "long_long=8,2 " .
    "pointer=2,2 " .
    "enum=2,2 " .
    "float=4,2 " .
    "double=4,2 " .
    "long_double=4,2 " .
    "void=1,1 " .
    "fun=1,2 " .
    "wchar_size_size=2,2 " .
    "alignof_string=1 " .
    "max_alignment=1 " .
    "char_wchar_signed=true,true " .
    "const_string_literals=true " .
    "big_endian=false " .
    "underscore_name=false " .
    "__builtin_va_list=true " .
    "__thread_is_keyword=true";
